{
    "name": "Atom20",
    "version": "1.1",
    "description": "Add buttons to run your Roll20 character's macros and sync its attributes on Atompunk.",
    "permissions": [
		"tabs"
    ],

    "host_permissions": [
		"https://app.roll20.net/editor/",
        "http://localhost:3000/character/*",
        "https://atompunk.vercel.app/character/*"
    ],

    "action": {
        "default_icon": {
            "16": "images/icon/icon16.png",
            "24": "images/icon/icon24.png",
            "32": "images/icon/icon32.png",
            "48": "images/icon/icon48.png",
            "64": "images/icon/icon64.png",
            "128": "images/icon/icon128.png",
            "256": "images/icon/icon256.png"
        }
    },

    "content_scripts": [
        {
            "js": ["chrome-content.js"],
            "matches": [
                "https://app.roll20.net/editor/",
                "http://localhost:3000/character/*",
                "https://atompunk.vercel.app/character/*"
            ]
        }
    ],
    
    "background": {
        "service_worker": "chrome-background.js",
        "type": "module"
    },

    "web_accessible_resources": [
        { "resources": ["src/*"], "matches": ["<all_urls>"] }
    ],

    "manifest_version": 3
  }